<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<servico xmlns="http://servicos.gov.br/v3/schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://servicos.gov.br/v3/schema ../servico.xsd">
	<nome>Emissão da Carteira de Trabalho e Previdencia Social - CTPS</nome>
	<sigla/>
	<contato/>
	<nomes-populares>
		<item>Carteira de Trabalho</item>
	</nomes-populares>
	<descricao>Permite a obtenção da carteira de trabalho, documento para habilitação do trabalhador brasileiro e estrangeiro no mercado de trabalho formal. É o principal instrumento para garantir o acesso aos direitos trabalhistas garantidos em lei ao trabalhador, emitida de forma presencial.</descricao>
	<gratuito>true</gratuito>
	<solicitantes>
		<solicitante>
			<tipo>Cidadãos e Famílias</tipo>
			<requisitos/>
		</solicitante>
		<solicitante>
			<tipo>Estrangeiros</tipo>
			<requisitos/>
		</solicitante>
	</solicitantes>
	<segmentos-da-sociedade>
		<item>Cidadãos</item>
	</segmentos-da-sociedade>
	<tempo-total-estimado>
		<entre min="8" max="15" unidade="dias-corridos"/>
		<descricao/>
	</tempo-total-estimado>
	<etapas>
		<etapa>
			<titulo>"apresentar documentos para iniciar o cadastro",</titulo>
			<descricao/>
			<documentos>
				<default>
					<item>Carteira de identidade</item>
					<item>Carteira de identidade de estrangeiro</item>
					<item>Carteira de trabalho</item>
					<item>Certidão de casamento</item>
					<item>Certidão de nascimento</item>
					<item>Comprovante de endereço/residência</item>
					<item>CPF</item>
				</default>
			</documentos>
			<custos>
				<default/>
			</custos>
			<canais-de-prestacao>
				<default>
					<canal-de-prestacao tipo="presencial">
						<descricao>nas unidades do ministerio do trabalho ou em algum posto credenciado das Prefeituras ou Sines</descricao>
					</canal-de-prestacao>
				</default>
			</canais-de-prestacao>
		</etapa>
		<etapa>
			<titulo>"retirada da Carteira de Trabalho personalizada"</titulo>
			<descricao/>
			<documentos>
				<default>
					<item>Informação biométrica</item>
					<item>Protocolo do cadastro do atendimento</item>
				</default>
			</documentos>
			<custos>
				<default/>
			</custos>
			<canais-de-prestacao>
				<default>
					<canal-de-prestacao tipo="presencial">
						<descricao>no mesmo posto que o cidadão se apresentou na primeira interação (quando da realização do cadastro)</descricao>
					</canal-de-prestacao>
				</default>
			</canais-de-prestacao>
		</etapa>
	</etapas>
	<orgao id="http://estruturaorganizacional.dados.gov.br/id/unidade-organizacional/ 2844"/>
	<areas-de-interesse>
		<item>Trabalho</item>
	</areas-de-interesse>
	<palavras-chave/>
	<legislacoes/>
</servico>
